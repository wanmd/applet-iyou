.wrap{
  position:relative;
}

.wrap.border{
  border-bottom:1px solid #f0f0f0;
}

.title{
  left:0;
}
.content{
  right:0rpx;
}
.content.arrow{
  right:30rpx;
}
.content.clear{
  padding-right:50rpx;
}
.content .delete{
  z-index:4;
}

.arr{
  height:10px;
  width:10px;
  border:1px solid #c9c8c8;
  position:absolute;
  right:2px;
  top:50%;
  transform-origin: center center;
  transform:translate3d(0,-50%,0) rotate(-45deg);
  border-width:0px 1px 1px 0px;
}

.url{
  position:absolute;
  height:100%;
  width:100%;
  left:0;
  top:0;
}

.middle{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
}

.delete{
  position:absolute;
  right:0rpx;
}
.flex_start{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.flex__it{
  flex: 1;
}