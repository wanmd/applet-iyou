/* //上拉运动 */

@keyframes sliup_1 {
    from {
        opacity: 0;
        transform: translateY(120%);
    }
    to {
        opacity: 1;
        transform: translateY(0%);
    }
}

.sliup_1 {
    display: block;
    animation: sliup_1 .35s ease-in both;
}

@keyframes slidown_1 {
    from {
        opacity: 1;
        transform: translateY(0%);
    }
    to {
        opacity: 0;
        transform: translateY(120%);
    }
}

.slidown_none {
    display: none !important;
}

.slidown_1 {
    /* // display: none; */
    animation: slidown_1 .35s ease-in both;
}

.show_h {
    display: block;
    animation: show_h .35s ease-in both;
}

@keyframes show_h {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.show_l {
    display: block;
    animation: show_l .35s ease-in both;
}

@keyframes show_l {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
        display: none;
    }
}


/* 公共弹窗 */

.popup_page {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 12;
}

.popup_page .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .6);
    z-index: 1;
}

.popup_page .popup_wrap {
    position: relative;
    top: 43px;
    left: 0;
    overflow-y: auto;
    z-index: 2;
    width: 100%;
    height: calc(100vh);
