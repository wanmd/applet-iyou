}

.bottom-nav .item {
    flex: 1;
    height: 100%;
    position: relative;
}

.bottom-nav .item .wrap {
    position: absolute;
    font-size: 24rpx;
    color: #666666;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    white-space: nowrap;
}

.bottom-nav .item .icon {
    display: block;
    width: 48rpx;
    margin: 0rpx auto;
}

.bottom-nav2 .item .icon {
    width: 72rpx;
}

.bottom-nav1 .item:first-of-type .wrap {
    left: 0;
    top: 50%;
    transform: translate(0, -50%);
}


