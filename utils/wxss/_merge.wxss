/* 透明按钮 */
.transparent-button {
  position: absolute; z-index: 11; top: 0; right: 0; bottom: 0; left: 0;
  width: auto !important; padding: 0 !important; border-radius: 0 !important; background-color: transparent !important;
}

/* 加载按钮 */
.loading-button { background-color: transparent !important; padding-top: 10px; padding-bottom: 10px; }

/* 解决 margin-top 塌陷 */
.mt-fix:before{ content: ""; display:table; }

/* 显示一行，省略号 */
.tov-e-1 { overflow: hidden; white-space: nowrap; text-overflow: ellipsis; word-break: break-all; }

/* 显示两行，省略号 */
.tov-e-2 { overflow: hidden;
  display: -webkit-box;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2; line-clamp: 2;
  -webkit-box-orient: vertical;
}
