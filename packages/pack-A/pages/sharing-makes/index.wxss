.flex_items{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.makes__item{
	position: relative;
}
.font-num{
	font-weight: bold;
}
.makes__item .position_img{
	width: 52rpx;
	height: 52rpx;
	position: absolute;
	left: -80%;
	top: 30rpx;
}
.makes__item .num{
	font-size:42rpx;
	font-family:Bebas;
	font-weight:bold;
	line-height:65rpx;
	color: #313133;
}
.makes__item .text{
	font-size: 22rpx;
	color: #9F9C9F;
}
.makes__nav{
	padding-top: 30rpx;
	padding-bottom: 150rpx;
}
.makes__nav .num{
	font-size: 32rpx;
}
.makes__price{
	color: #E9BA77;
	font-size: 58rpx;
	padding-bottom: 40rpx;
}
.makes__price i{
	font-size: 43rpx;
	margin-right: 10rpx;
}
.makes__hint{
	font-size: 22rpx;
	color: #9F9C9F;
	margin-bottom: 18rpx;
}
.makes__hint1{
	font-size: 20rpx;
	color: #F4D5A4;
	margin-bottom: 50rpx;
}
.makes__price_nav{
	padding-bottom: 50rpx;
	justify-content: space-between;
	/*justify-content: center;*/
}
.makes__price_nav .makes__item .num{
	color: #313133;
	font-size: 32rpx;
}
.makes__lists_w .makes__item .num{
	color: #858585;
	font-size: 32rpx;
}
.makes__lists_w .makes__item .num{
	color: #858585;
	font-size: 32rpx;
}
.makes__lists{
	padding: 20rpx;
	display: none;
}
.makes__lists.active{
	display: block;
}
.makes__list{
	display: flex;
	justify-content: space-between;
	padding: 20rpx 0;
}
.makes__item{
	text-align: center;
}
.makes__nav,
.makes__price_nav,
.makes__price_wrap,
.makes__list_taps{
	width: 544rpx;
	margin: 0 auto;
	text-align: center;
}
.makes__taps{
	width: 100%;
	height: 66rpx;
	line-height: 66rpx;
	border-radius: 33rpx;
	border: 1rpx solid #F4D5A4;
	display: flex;
	overflow: hidden;
}
.makes__tap{
	flex: 1;
	text-align: center;
	border-right: 1rpx solid #F4D5A4;
}
.makes__tap:last-child{
	border-width: 0;
}
.makes__tap.active{
	background-color: #F4D5A4;
}

.SM-body{
  width: 90%;
  height: 710rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  margin-top: -355rpx;
  left: 5%;
