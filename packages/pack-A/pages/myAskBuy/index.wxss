.list-center {
    padding: 34rpx;
    border-bottom: 2px solid #F7F7F7;
}

.list-a,
.list-b {
    display: flex;
}

.list-b {
    padding-top: 26rpx;
}

.list-aa {
    width: 100%;
}

.list-center .img_box {
    width: 144rpx;
    height: 144rpx;
    margin-right: 30rpx;
    flex-shrink: 0;
    overflow: hidden;
    align-items: center;
}

.list-center .img_box .icon {
    width: 100%;
    height: 100%;
    display: block;
}

.list-center .text {
    font-size: 30rpx;
    line-height: 42rpx;
    max-height: 84rpx;
    color: #434759;
    flex: 1;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.list-time {
    flex: 1;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #999999;
}

.btn-delete {
    font-size: 24rpx;
    line-height: 32rpx;
    color: #000000;
}