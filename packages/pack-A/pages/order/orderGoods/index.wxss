
page{
  color:#333;
  font-size:30rpx;
}
.goods{
  padding-top:30rpx;
  border-top:1px solid rgba(247,247,247,1);
  padding-bottom:30rpx;
}
.goods .wrap{
  position:relative;
  padding-left:246rpx;
  height:216rpx;  
}

.cover{
  width: 216rpx;
  height:216rpx;
  position:absolute;
  left:0;
  top:0;
}

.body{
  height:100%;
  position:relative;
  display: flex;
  flex-shrink: 0;
  flex-wrap: wrap;
  align-content: space-between;
}

.goods-name{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top:10rpx;
  text-align:justify;
}

.color-666{
color:#666666;
}
.pull-left{float:left !important;}
.pull-right{float:right !important;}

.goods-no{
  overflow:hidden;
  position:absolute;
  left:0prx;
  top:50%;
  transform:translateY(-50%);
  width:100%;
  padding-top:38rpx;
}
.goods-qty{
  overflow:hidden;
  /*position:absolute;*/
  /*left:0prx;*/
  /*top: 100rpx;*/
  width:100%;
  font-size: 26rpx;
  line-height: 36rpx;
}
.bold{
  font-weight:bold;
}
.goods-product__note{
  margin-top: 20rpx;
  position: relative;
  width:100%;
  font-size: 26rpx;
  line-height: 36rpx;
}
.g-p__note_title{
  position: absolute;
  left: 0;
  top: 0;
}
.g-p__note_val{
  padding-left: 120rpx;
  line-height: 36rpx;
}
.color-ffe200{
  color: #ffe200;
}
.yellow{
  color: #ffe200;
  font-size: 26rpx;
