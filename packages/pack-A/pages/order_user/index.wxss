@import './order.wxss';
page{
  background:rgba(247,247,247,1);
  height:100%;
  padding-top:184rpx;
}
.red-number{
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  background-color: #f00;
}
.item-icon{
  margin: 0 auto;
  text-align: center;
  justify-content:  center;
  align-items:  center;
}
.wrap{
  justify-content:  center;
  align-items:  center;
}

.current {
  color: #AB00FF;
  border-bottom: 6rpx solid #AB00FF;
}

.search_wrap {
  display: flex;
  align-items: center;
  padding: 20rpx 36rpx 20rpx 48rpx;
  background: #F7F7F7;
}

.search_wrap .input {
  width: 516rpx;
  height: 58rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 29rpx;
}

.search_wrap .input input {
  height: 38rpx;
  line-height: 38rpx;
}

.search_wrap .search_btn {
  padding: 0 10rpx;
}