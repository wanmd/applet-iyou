@import '../../order.wxss';

.pay-type-wrap{
  padding:0rpx 40rpx;
}

.wx-ali-pay{
  overflow:hidden;
  
}

.wx-ali-pay .item{
  width:280rpx;
}
.wx-ali-pay .item .img{
  display:block;
  width:280rpx;
  height:280rpx;
  margin-top:20rpx;
}

.bank-card{
  height:244rpx;
  background:rgba(236,189,117,1);
  border-radius:16px;
  position:relative;
}
.bank-card .wrap{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  white-space:nowrap;
  width:100%;
  padding:28rpx 32rpx;
}
.bank-card .account{
  font-size:32rpx;
  font-weight:bold;
  margin-top:24rpx;
}
.bank-card .copy{
  position:absolute;
  right:32rpx;
  top:50%;
  transform:translateY(-50%);
  background:#333333;
  color:#ECBD75;
  line-height:48rpx;
  width:80rpx;
  border-radius:24rpx;
  text-align:center;
  font-size:24rpx;
}

.contact{
  overflow:hidden;
  margin-top:40rpx;
  padding:0rpx 20rpx;
}

.tips{
  margin-top: 10rpx;
  color: #999999;
  font-size: 26rpx;
}
.padd_b-40{
  padding-bottom: 40rpx;
}