page{
  padding-bottom:140rpx;
}
.items .item .wrap{
  line-height:108rpx;
  overflow:hidden;
  padding-left:20rpx;
  font-size: 28rpx; 
}
.categrory-wrap .list{
	position: fixed;
	right: 20rpx;
	top: 50%;
   	transform: translateY(-50%);
   	margin-top: -20rpx;
	z-index: 9;
}
.categrory-wrap .item{
	padding: 9rpx 10rpx;
	line-height: 20rpx;
	font-size: 20rpx; 
	text-align: center;
}

.categrory-wrap .item.active{
	/*background-color: #FFE200;*/
	border-radius: 50%;
}
.cateItems{
	padding: 20rpx 0 30rpx;
	display: flex;
	justify-content: flex-start;
}
.cateItem{
	min-width:150rpx;
	height:50rpx;
	line-height:50rpx;
	background:rgba(238,238,238,1);
	border-radius:4rpx;
	display: inline-block;
	box-sizing: border-box;
	padding: 0 10rpx;
	text-align: center;
	margin: 0 20rpx;
}