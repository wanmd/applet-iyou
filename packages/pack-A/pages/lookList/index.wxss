page{
  height:100%;
  padding-top:88rpx;
}
.top-nav{
  position:fixed;
  width:100%;
  top:0rpx;
  left:0rpx;
  z-index:2;
  background-color: #fff;
  box-shadow:0px 1px 10px 1px #efeff0;
}
.toggle-item{
  display:flex;
  padding: 0 120rpx;
}
.toggle-item .item{
  flex:1;
  line-height:88rpx;
  color:#49494D;
  font-size: 26rpx;
  text-align:center;
}
.toggle-item .item.current{
  font-weight: normal;
  position:relative;
  font-size: 26rpx;
  color:#313133;
}
.toggle-item .item.current::after{
  content:'';
  position:absolute;
  width:164rpx;
  height:8rpx;
  background:#FFE200;
  bottom:6rpx;
  left:50%;
  transform:translate(-50%);
}
