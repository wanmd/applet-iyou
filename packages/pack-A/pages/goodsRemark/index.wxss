/* packages/pack-A/pages/goodsRemark/index.wxss */
page {
  background-color: #fff !important;
  padding-bottom: 200rpx;
}
.inputWrap {
  width: 576rpx;
  height: 82rpx;
  border: 2rpx solid #D4D4D4;
  padding: 22rpx 50rpx 22rpx 50rpx;
}
input {
  width: 100%;
}
.ok {
  width: 56rpx;
  height: 38rpx;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #A8A8A8;
}
.selectRemarks {
  padding-bottom: 50rpx;
  border-bottom: 2rpx solid #F1F1F1;
  margin-bottom: 22rpx;
}
.usedRemarks {
  padding-bottom: 50rpx;
  border-bottom: 2rpx solid #F1F1F1;
  margin-bottom: 22rpx;
}
.title {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #333333;
  margin-bottom: 30rpx;
}

.bottom {
  position: fixed;
  bottom: 54rpx;
  width: 100%;
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999;
  background-color: #fff;
}
.save {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 400rpx;
  height: 96rpx;
  background: #FFE200;
  border-radius: 48rpx;
  font-size: 32rpx;
  line-height: 42rpx;
  color: #333333;
}
.remarkItem {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 320rpx;
  height: 68rpx;
  background: #F5F5F5;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #333333;
  border-radius: 42rpx;
  margin-bottom: 16rpx;
}
.delete {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}