@charset "UTF-8";
page {
    padding-bottom: 200rpx;
}

.business-step {
    background-color: #fafafa;
    background: #fafafa;
}

.step {
    font-size: 36rpx;
    font-family: SFProDisplay;
    font-weight: normal;
    line-height: 42rpx;
    margin-bottom: 8rpx;
}

.is_active {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: #ecbd75;
    line-height: 34rpx;
    height: 140rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(360deg, rgba(247, 224, 173, 0) 0%, rgba(236, 189, 117, 0.5) 100%);
    box-sizing: border-box;
    border-top: 8rpx solid #ecbd75;
}

.no_active {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    line-height: 34rpx;
    color: rgba(236, 189, 117, 0.5);
    height: 140rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.fs18 {
    font-size: 36rpx;
}

.fs12 {
    font-size: 24rpx;
}

.module-title {
    font-size: 32rpx;
    position: relative;
}

.module-title::before {
    content: '';
    position: absolute;
    height: 100%;
    width: 10rpx;
    top: 0rpx;
    left: 0rpx;
    background: #ffe200;
}

.p-l-32 {
    padding-left: 32rpx;
}

.p-r-32 {
    padding-right: 32rpx;
}

.step1 .idcard-upload .item {
    width: 336rpx;
    height: 336rpx;
    position: relative;
    background: white;
    box-shadow: 0px 1rpx 30rpx 0px rgba(204, 204, 204, 0.3);
    border-radius: 16rpx;
    overflow: hidden;
}

.step1 .idcard-upload .item .wrap {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.step1 .idcard-upload .item .wrap .el-image {
    display: block;
    width: 228rpx;
    height: 154rpx;
}

.step1 .idcard-upload .upload-frame .el-image {
    background-color: white;
}

.step1 .zhizhao .item {
    width: 336rpx;
    height: 460rpx;
}

.step1 .upload {
    background: #e7f3ff;
    border: 1px dashed #1890ff;
    position: relative;
    text-align: center;
    white-space: nowrap;
}

.step1 .upload.upload_color {
    background: #E7F3FF;
}

.step1 .upload .wrap {
    position: absolute;
    color: #999;
    font-size: 24rpx;
}

.step1 .upload .wrap .icon {
    display: block;
    margin: auto;
    width: 32rpx;
    height: 32rpx;
}

.step1 .store .item {
    width: 336rpx;
    height: 224rpx;
}

.step1 .line12 {
    width: 100%;
    height: 24rpx;
    background-color: #eee;
}

.step1 .m-t-40 {
    margin-top: 40rpx;
}

.step1 .padd_b-10 {
    padding-bottom: 20rpx;
}

.step1 .tips {
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 300;
    color: #999999;
    line-height: 44rpx;
}

.step1 .mar_r-10 {
    margin-right: 20rpx;
}

.step1 .mar_tb-10 {
    margin: 40rpx 0;
}

.step1 .border-r50 {
    border-radius: 50%;
}

.step1 switch .wx-checkbox-input {
    /*未选中状态*/
    border-radius: 50%;
    /* 圆角 */
}

.step1 switch .wx-checkbox-input.wx-checkbox-input-checked {
    border-radius: 50%;
    /* 圆角 */
}

.step1 switch .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    /* 圆角 */
}

.step1 .tips1 {
    color: #ffe200;
}

.step1 .cate-select {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 30rpx;
}

.step1 .cate-item {
    width: 336rpx;
    height: 108rpx;
    line-height: 108rpx;
    background: white;
    border-radius: 16rpx;
    border: 1px solid #f2f2f2;
    text-align: center;
    font-size: 32rpx;
    color: #333333;
    font-family: PingFangSC;
    font-weight: 400;
    margin: 12rpx 0;
}

.step1 .cate-item:nth-of-type(2n) {
    margin-left: 16rpx;
}

.step1 .sellect-item {
    background-color: #FFE200;
}

.step2 .module {
    margin-top: 40rpx;
}

.step2 .module .title {
    font-size: 24rpx;
    font-weight: bold;
    position: relative;
    padding-left: 30rpx;
}

.step2 .module .title::before {
    position: absolute;
    content: '';
    width: 10rpx;
    height: 10rpx;
    background: #333;
    border-radius: 50%;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}

.step2 .module .body {
    padding: 0rpx 70rpx;
    margin-top: 30rpx;
}

.step2 .scan-type .item {
    height: 240rpx;
    width: 240rpx;
    position: relative;
}

.step2 .upload-tips {
    position: absolute;
    white-space: nowrap;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.step2 .upload-tips .icon {
    display: block;
    width: 32rpx;
    margin: 0 auto 20rpx auto;
}

.step2 .ctr-row {
    position: relative;
    padding-left: 100rpx;
    border-bottom: 1px solid #f7f7f7;
}

.step2 .ctr-row .label {
    position: absolute;
    left: 0rpx;
    top: 50%;
    transform: translateY(-50%);
}

.step2 .ctr-row .input {
    height: 80rpx;
    line-height: 80rpx;
}

.step3 .item {
    background: #fff;
    margin-top: 20rpx;
}

.step3 .images .item {
    float: left;
    margin: 18rpx 0rpx 0rpx 18rpx;
}

.step3 .images .item:nth-of-type(3n + 1) {
    margin-left: 0rpx;
}

.w280 {
    width: 560rpx;
}

.w250 {
    width: 500rpx;
}

.cell-wrap {
    background: #F6F6F6;
    margin-bottom: 16rpx;
    border-radius: 12rpx;
    padding: 0 18rpx;
}

.cell-t-b {
    padding: 14rpx 18rpx;
}