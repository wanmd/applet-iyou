page {
  padding-bottom: 80rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  margin: auto;
  transform: translateY(-40rpx);
}

.nickname {
  font-weight: bold;
  position: relative;
}

.amount-part {
  margin-top: 70rpx;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.amount {
  font-size: 80rpx;
}

.receive-user {
  border: 1px solid #f1f1f1;
  border-width: 1px 0px 1px 0px;
  padding-top: 20rpx;
  padding-bottom: 16rpx;
}
.totle_hasget {
  padding: 30rpx 0;
  margin: 0 50rpx;
}
.hasget_tit {
  font-size: 20rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(197, 197, 197, 1);
  line-height: 33rpx;
}
.get-list {
  display: flex;
  align-items: center;
  margin-top: 2rpx;
  font-size: 20rpx;
  justify-content: center;
}
.list-pic {
  display: flex;
  align-items: center;
  overflow: scroll;
  max-width: 480rpx;
}
.user-pic {
  width: 51rpx;
  height: 51rpx;
  border-radius: 50%;
  margin-right: 13rpx;
}
.user-avatar {
  overflow: hidden;
  margin-top: 20rpx;
}
.user-avatar .item {
  border-radius: 8rpx;
  float: left;
  margin-left: 10px;
}
.user-avatar .item:first-of-type {
  margin-left: 0rpx;
}

.receive-count {
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.content {
  line-height: 48rpx;
  text-align: justify;
  font-size: 32rpx;
}

.location {
  position: relative;
  padding-left: 30rpx;
  margin-right: 20rpx;
}
.location .icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 24rpx;
  height: 24rpx;
}
.unit {
  font-size: 40rpx;
}
.bgch {
  background-color: #ffe200;
}
.fs22 {
  font-size: 24rpx;
  font-family: PingFang;
  font-weight: 500;
  color: rgba(236, 189, 117, 1);
  line-height: 33rpx;
}
.colorGold{
  color: #EBCD99
}
.mt4{
  margin-top: 4rpx;
}