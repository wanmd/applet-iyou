page{
  padding-bottom:120rpx;
}
.avatar{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  display:block;
  margin:auto;
  transform:translateY(-40rpx);
}

.nickname{
  font-weight:bold;
  position:relative;
}

.amount-part{
  margin-top:60rpx;
  text-align:center;
}

.amount{
  font-size:80rpx;
}

.receive-user{
  border:1px solid #F1F1F1;
  border-width:1px 0px 1px 0px;
  padding-top:20rpx;
  padding-bottom:16rpx;
}

.user-avatar{
  overflow:hidden;
  margin-top:20rpx;
}
.user-avatar .item{
  border-radius:8rpx;
  float:left;
  margin-left:10px;
}
.user-avatar .item:first-of-type{
  margin-left:0rpx;
}

.receive-count{
  position:absolute;
  right:0rpx;
  top:50%;
  transform:translateY(-50%);
}

.content{
  line-height:48rpx;
  text-align:justify;
  font-size:32rpx;
}

.location{
  position:relative;
  padding-left:30rpx;
  margin-right:20rpx;
}
.location .icon{
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  left:0;
  width:24rpx;
  height:24rpx;
}