page{
  height:100%;
}
.search{
  box-shadow:0px 4px 8px 0px rgba(0,0,0,0.02);
  padding-top:20rpx;
  padding-bottom:20rpx;
  position:fixed;
  left:0rpx;
  top:0rpx;
  width:100%;
  z-index:2;
  background:#ffff;
}
.search .wrap{
  position:relative;
  padding-right:100rpx;
}
.search .wrap .search-btn{
  position:absolute;
  right:0;
  top:50%;
  transform:translateY(-50%);
}
.search input{
  background:#F2F2F2;
  padding:0rpx 20rpx;
}

.bottom{
  position:fixed;
  width:100%;
  left:0;
  bottom:0;
  background:#ffffff;
  z-index:2;
  padding-top:26rpx;
  padding-bottom:26rpx;
}