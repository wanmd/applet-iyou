.bc {
  height: 500rpx;
  width: 100%;
  display: block;
}

.date-block {
  margin-top: 60rpx;
  position: relative;
}

.date-block:first-child {
  margin-top: 0rpx;
}

.record-item {
  padding-left: 150rpx;
  position: relative;
  margin-top: 20rpx;
  padding-right: 30rpx;
}

.date-block .record-item:first-child {
  margin-top: 0rpx;
}

.body {
  position: relative;
  display: flex;
}

.cover {
  display: block;
  width: 144rpx;
  height: 144rpx;
  margin-right: 20rpx;
}

.flex-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.date {
  position: absolute;
  width: 150rpx;
  left: 0;
  text-align: center;
}

.date .d {
  font-size: 50rpx;
}

.a {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.label {
  float: left;
  color: #F61935;
  width: 104rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  background: #fee8ea;
}

.delete {
  float: left;
  margin-left: 20rpx;
  width: 34rpx;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}
