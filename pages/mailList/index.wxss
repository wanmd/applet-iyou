page{
  height:100%;
  padding-top:88rpx;
}
.top-nav{
  position:fixed;
  width:100%;
  top:0rpx;
  left:0rpx;
  z-index:2;
  background-color: #fff;
  box-shadow:0px 1px 15px 1px #efeff0;
}
.toggle-item{
  display:flex;
}
.toggle-item .item{
  flex:1;
  line-height:88rpx;
  color:#434759;
  text-align:center;
}
.toggle-item .item.current{
  font-weight:bold;
  position:relative;
}
.toggle-item .item.current::after{
  content:'';
  position:absolute;
  width:32rpx;
  height:8rpx;
  background:#FFE200;
  bottom:6rpx;
  left:50%;
  transform:translate(-50%);
}

