}

.skuItem {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 186rpx;
  height: 60rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  line-height: 32rpx;
  color: #333333;
  margin-right: 38rpx;
