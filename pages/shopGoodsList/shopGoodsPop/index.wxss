.input-area {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 176rpx;
}

.opera {
  border: 2rpx solid #dbdbdb;
  width: 48rpx;
  height: 48rpx;
  line-height: 44rpx;
  text-align: center;
  color: #323233;
  font-weight: bold;
  border-radius: none;
}

.opera-disable {
  color: #777777;
  font-weight: normal;
  /* background-color: #777777; */
}

.stock__input {
  display: inline-block;
  font-size: 24rpx;
  color: #333333;
  height: 48rpx;
  line-height: 48rpx;
  width: 100%;
  text-align: center;
}

.add-dele {
  border-top: 1rpx solid #dbdbdb;
  border-bottom: 1rpx solid #dbdbdb;
  width: 80rpx;
  height: 48rpx;
