      <view class="vip-l-del">135/3月</view>
    </view>
    <view class="vip-r colorGold">
      <text class="fs18 ">￥</text>
      <text class="fs24">128</text>
    </view>
  </view>
  <view class="vip-item vip-item--{{current_active==2?'a':''}}" data-index="2">
    <view class="vip-l">
      <view class="vip-l-tit">6个月</view>
      <view class="vip-l-del">270/6月</view>
    </view>
    <view class="vip-r colorGold">
      <text class="fs18 ">￥</text>
      <text class="fs24">218</text>
    </view>
  </view>
  <view class="vip-item vip-item--{{current_active==3?'a':''}}" data-index="3">
    <view class="vip-l">
      <view class="vip-l-tit">12个月</view>
      <view class="vip-l-del">540/3月</view>
    </view>
    <view class="vip-r colorGold">
      <text class="fs18 ">￥</text>
      <text class="fs24">448</text>
    </view>
  </view>
</view>
