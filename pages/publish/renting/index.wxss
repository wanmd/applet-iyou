.type-btns,
.picker {
    line-height: 40rpx;
    padding: 34rpx 0;
    display: flex;
    padding-right: 30rpx;
    position: relative;
    font-size: 30rpx;
}

.type-title,
.picker-title {
    flex: 1;
}

.picker-placeholder {
    color: #CCCCCC;
    margin-right: 18rpx;
}

.picker-val {}

.arr {
    height: 10px;
    width: 10px;
    border: 1px solid #c9c8c8;
    position: absolute;
    right: 2px;
    top: 50%;
    transform-origin: center center;
    transform: translate3d(0, -50%, 0) rotate(-45deg);
    border-width: 0px 1px 1px 0px;
}

.type-btn {
    width: 116rpx;
    height: 48rpx;
    opacity: 1;
    border-radius: 12px;
    border: 1px solid #CECECE;
    font-size: 24rpx;
    line-height: 44rpx;
    color: #434759;
    text-align: center;
    margin-left: 56rpx;
}

.type-btn-wrap {
    display: flex;
    flex-shrink: 0;
}

.type-btn.active {
    line-height: 48rpx;
    background: #FBD49D;
    border: none;
    font-size: 28rrpx;
    color: #434759;
}