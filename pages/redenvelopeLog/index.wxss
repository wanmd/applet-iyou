.number-container{
  display:flex;
  background:#FAFAFA;
  padding:30rpx 0rpx;
}
.number-container .item{
  flex:1;
  color:#434759;
  text-align:center;
}
.number-container .name{
  font-size:24rpx;
}
.number-container .num{
  font-size:48rpx;
  margin-top:10rpx;
}

.log-item{
  border-bottom:1px solid #F7F7F7;
  padding:20rpx 0rpx 20rpx 112rpx;
  position:relative;
}
.log-item .avatar-container{
  position:absolute;
  height:100%;
  width: 112rpx;
  left:0;
  top:0;
}
.goods-pic{
  height:144rpx;
  width:144rpx;
  display:block;
}

.info{
  position:absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  padding-left:144rpx;
}
.date, .amount{
  position:absolute;
  bottom:0rpx;
  color:#999;
  font-size:24rpx;
}
.amount{
  right:0;
}