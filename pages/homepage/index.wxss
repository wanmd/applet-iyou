  /*z-index:2;*/
  /*box-shadow:0px 1px 15px 1px #efeff0;*/
  height: 100rpx;
}
.toggle-item{
  display:flex;
  padding: 0 74rpx;
}
.toggle-item .item{
  flex:1;
  line-height: 100rpx;
  color:#49494D;
  font-size: 26rpx;
  text-align:center;
}
.toggle-item .item.current{
  font-weight: normal;
  position:relative;
  font-size: 26rpx;
  color:#313133;
}
.toggle-item .item.current::after{
  content:'';
  position:absolute;
  width: 100%;
  height:7rpx;
  background:#FFE200;
  bottom:6rpx;
  left:50%;
  transform:translate(-50%);
}
