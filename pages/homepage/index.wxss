page{
  height:100%;
  background:#fff;
}

.header{
  height:418rpx;
  background:no-repeat center #FFE200;
  padding-top:64rpx;
  background-size:cover;
}


.go-store{
  position:absolute;
  right:0rpx;
  background:#FFE200;
  text-align:center;
  padding:14rpx 20rpx;
  border-radius: 60rpx;
}

.body{
  position:relative;
  background: #fff;
  /*transform:translateY(-32rpx);*/
  border-radius:32rpx 32rpx 0rpx 0rpx;
  /*padding-top:30rpx;*/
}
.fixed-bottom.hide,
.body.hide{
	display: none;
}
.label{
  overflow:hidden;
  margin-top:20rpx;
  margin-bottom:20rpx;
}

.label .item{
  float:left;
  line-height:48rpx;
  padding:0rpx 20rpx;
  font-size:24rpx;
  background:#fff;
  border:1rpx solid rgba(217,217,217,1);
  margin-right:20rpx;
  margin-top:10rpx;
  border-radius: 24rpx;
}
.label .item:last-child{
  margin-right:0rpx;
}


.thumbs_l{
	padding-bottom: 40rpx;
}
.thumbs .thumb{
  float:left;
  width:100rpx;
  height:100rpx;
  margin-left:10rpx;
}
.thumbs .thumb:first-child{
  margin-left:0rpx;
  box-sizing: border-box;
}
.thumbs .thumb_l{
  float:left;
  width: 187rpx;
  height:187rpx;
  padding: 2rpx;
  display: block;
  margin: 0rpx;
  box-sizing: border-box;
}

.padd_l-15{
  padding-left: 30rpx;
}
.flex{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100%;
}
.flex_c{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.flex__it{
  flex: 1;
}
.flex_ac{
  background-color: #FFE200
}
.flex-it{
  margin-left: 15rpx;
  width: 40rpx;
  height: 40rpx;
}


.top-nav{
  /*position:fixed;*/
